<%- include ('coopH/first.ejs') -%>

<div class = "container-fluid">
<% if(appReg.length > 0) { %>
        <table class= "table table-hover table-striped justify-content-center">
            <div class="thead"> 
            <thead class= "table-dark">
                <tr>
                    <td scope="row">ID</td>
                    <td  scope="col">TITLE</td>
                    <td  scope="col">FIRST NAME</td>
                    <td  scope="col">LAST NAME</td>
                    <td  scope="col">ADDRESS</td>
                    <td  scope="col">PHONE NO</td>
                    <td  scope="col">EMAIL</td>
                    <td  scope="col">REFFERER I</td>
                    <td  scope="col">REFFERER II</td>
                    <td  scope="col">ACTION</td>
                </tr>
            </thead>
            </div>
            <tbody>
                <div class="container">
             <% appReg.forEach((mem, index) => { %>
              <tr class="data">
                <th style="color: white;" scope="row"> <%=  mem._id %> </th>
                <td> <%= mem.title %></td>
                <td> <%= mem.firstName %></td>
                <td> <%= mem.lastName %></td>
                <td> <%= mem.addr %></td>
                <td> <%= mem.cellNo %></td>
                <td> <%= mem.email %></td>
                <td> <%= mem.ref1 %></td>
                <td> <%= mem.ref2 %></td>
                <td>
                    <a href="/app/view/<%=mem._id%>" class="btn btn-info">view</a>  
                </td>
                <td>
                    <a href="/app/accept/<%=mem._id%>" class="btn btn-success">Accept</a>  
                <td> 
                    <a href="/app/reject/<%=mem._id%>" class="btn btn-danger">Reject</a>  
               </td>  
            </tr>
              </div>
                <% }) %>
            </tbody>
        </table>
    <%  } else { %>
        <p class= "text-primary">Please add member(s) to the page</p>
    <% } %>
 </div>
</div>
</body>
</html>
